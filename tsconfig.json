{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "moduleDetection": "force",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "types": ["node"],
        "verbatimModuleSyntax": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "eslint.config.ts"]
}
